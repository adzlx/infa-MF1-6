def uk(x, k):
    return (-1)**k * (x**(2*k) / (2*k + 1) * (2*k + 5))

def cal_sum(x, n):
    t_sum = 0
    for k in range(1, n+1):
        t_sum += uk(x, k)
    return t_sum

x_values = [0.1, 0.3, 0.4, 0.7, 1.0]

n = 10

print("|   x   |    S    |")

print("-------------------")

for x in x_values:
    result = cal_sum(x, n)
    print(f"| {x}  |  {result:.6f} |")
    
print("-------------------")
